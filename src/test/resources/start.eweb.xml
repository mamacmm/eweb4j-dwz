<?xml version="1.0" encoding="UTF-8"?>

<beans>
	<eweb4j>
		<reload>0</reload>
		<debug>1</debug>
		<locales>
	      <locale language="zh" country="CN"/>
	    </locales>
		<properties>
			<file id="DWZConstant" path="dwz/conf/dwz.properties" global="false" />
			<file id="MenuConstant" path="dwz/conf/menu.properties" global="false" />
			<file id="NavMenuConstant" path="dwz/conf/navmenu.properties" global="false" />
			<file id="TreeMenuConstant" path="dwz/conf/treemenu.properties" global="false" />
		</properties>
		<ioc>
			<open>0</open>
	        <logs>
		    	<log console="0" level="info" file="logs/ioc.log" size="5"/>
		    </logs>
			<iocXmlFiles>
				<path>dwz/ioc/dwz-ioc.xml</path>
			</iocXmlFiles>
		</ioc>
		<orm>
			<open>1</open>
			<logs>
		    	<log console="0" level="info" file="logs/orm.log" size="5"/>
		   	</logs>
			<dataSource>com.mchange.v2.c3p0.ComboPooledDataSource</dataSource>
			<scanPojoPackage>
				<path>test.po</path>
				<path>org.eweb4j.component.dwz.menu</path>
			</scanPojoPackage>
			<ormXmlFiles>
				<path></path>
			</ormXmlFiles>
			<dbInfoXmlFiles>
				<path>mysql.xml</path>
			</dbInfoXmlFiles>
		</orm>
		<mvc>
			<open>0</open>
	        <logs>
		    	<log console="1" level="info" file="logs/mvc.log" size="5"/>
		    </logs>
		    <upload tmp="${RootPath}/WEB-INF/tmp" maxMemorySize="20M" maxRequestSize="512K" />
			<scanActionPackage>
				<path>org.eweb4j.component.dwz.menu</path>
			</scanActionPackage>
			<actionXmlFiles />
			<interXmlFiles>
				<path></path>
			</interXmlFiles>
		</mvc>
	</eweb4j>
</beans>
